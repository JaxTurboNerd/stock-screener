  <section class='w-full p-3 border-2 rounded-sm'>
    <p class='text-2xl bg-gray-200 w-full p-1'>Debt</p>
    <div class='flex border-1 rounded-sm items-center gap-4 p-2 mt-4' id='current-ratio'>
      <p class='text-xl'>Current Ratio</p>
      <div class='flex flex-wrap gap-2 mt-2'>
        <%
          current_ratio_options = [
            ['Less than 1.0', 'lt_1_0'],
            ['1.0 - 2.0', '1_0_2_0'],
            ['2.0 - 3.0', '2_0_3_0'],
            ['More than 3.0', 'gt_3_0']
          ]
        %>
        <% current_ratio_options.each_with_index do |(label, value), i| %>
          <label class="inline-flex items-center px-4 py-2 border rounded-lg cursor-pointer transition-colors bg-white text-gray-700 border-gray-300 hover:bg-gray-100 mr-2">
            <input
              type="radio"
              name="current_ratio"
              value="<%= value %>"
              id="current-ratio-<%= i %>"
              class="sr-only current-ratio-radio"
              onchange="
                this.parentElement.parentElement.querySelectorAll('label').forEach(labelEl => {
                  labelEl.classList.remove('!bg-gray-800', '!text-white', '!border-gray-800');
                });
                if (this.checked) {
                  this.parentElement.classList.add('!bg-gray-800', '!text-white', '!border-gray-800');
                }
              ">
            <span class="px-2 py-1 rounded-lg transition-colors"><%= label %></span>
          </label>
        <% end %>
      </div>
    </div>
