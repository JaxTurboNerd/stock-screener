<p style="color: green"><%= notice %></p>

<% content_for :title, "Stocks" %>

<p class='text-3xl'>Stocks:</p>

<div> 
    <% @stocks.each do |stock| %>
    <div class='flex p-4 mb-2 bg-gray-200 border-2 border-black rounded-md'>
      <p><%= stock.name %></p>
      <% if stock.name == "Apple" %>
        <p>  <%= @result %></p>
      <% end %>
    </div>  
    <% end %>
</div>
